{
	"name": "customRollup",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "tools/customRollup",
	"projectType": "library",
	"targets": {
		"test": {},
		"build-base": {
			"executor": "@nx/js:tsc",
			"options": {
				"generateExportsField": true,
				"additionalEntryPoints": [
					"{projectRoot}/{executors,generators,migrations}.json",
					"{projectRoot}/plugin.ts"
				],
				"assets": [
					{
						"input": "tools/customRollup",
						"glob": "**/files/**",
						"output": "/"
					},
					{
						"input": "tools/customRollup",
						"glob": "**/files/**/.gitkeep",
						"output": "/"
					},
					{
						"input": "tools/customRollup",
						"glob": "**/*.json",
						"ignore": [
							"**/tsconfig*.json",
							"project.json",
							".eslintrc.json"
						],
						"output": "/"
					},
					{
						"input": "tools/customRollup",
						"glob": "**/*.js",
						"ignore": ["**/jest.config.js"],
						"output": "/"
					},
					{
						"input": "tools/customRollup",
						"glob": "**/*.d.ts",
						"output": "/"
					},
					{
						"input": "",
						"glob": "LICENSE",
						"output": "/"
					}
				]
			}
		},
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{workspaceRoot}/build/tools/customRollup"],
			"options": {
				"command": "echo yay"
			}
		},
		"add-extra-dependencies": {
			"command": "node ./scripts/add-dependency-to-build.js rollup @nrwl/rollup"
		},
		"lint": {}
	}
}
